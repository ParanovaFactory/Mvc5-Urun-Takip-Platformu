@model Mağza_Ürün_Takip_Sistemi.Models.Entity.tblmusteri
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <h2>Yeni Müşteri Ekleme</h2>
    <br />
    <label>Müşteri Adı</label>
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Ad, "Ad Alanı Boş Bırakılamaz", new { @style = "color:green" })
    <br />
    <label>Müşteri Soyadı</label>
    @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Soyad, "Soyad Alanı Boş Bırakılamaz", new { @style = "color:green" })
    <br />
    <label>Müşteri Şehri</label>
    @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Sehir, "Şehir Alanı Boş Bırakılamaz", new { @style = "color:green" })
    <br />
    <label>Müşteri Bakiye</label>
    @Html.TextBoxFor(x => x.Bakiye, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Bakiye, "Bakiye Alanı Boş Bırakılamaz", new { @style = "color:green" })
    <br />

    <button class="btn btn-info" style="margin-top:15px">Kaydet</button>
</form>

